// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  CORRETOR
}

enum ImovelTipo {
  VENDA
  ALUGUEL
}

enum ImovelStatus {
  ATIVO
  INATIVO
  VENDIDO
  ALUGADO
}

enum LeadStatus {
  NOVO
  CONTATADO
  ACOMPANHAMENTO
  VISITA_AGENDADA
  QUALIFICADO
  NEGOCIACAO
  FECHADO
  CONVERTIDO
  PERDIDO
}

enum LeadPriority {
  BAIXA
  MEDIA
  ALTA
  URGENTE
}

enum EventoTipo {
  VISITA
  ACOMPANHAMENTO
  REUNIAO
  URGENTE
}

enum TimelineAction {
  CREATED
  STATUS_CHANGED
  NOTE_ADDED
  EVENT_SCHEDULED
  EVENT_COMPLETED
  CONTACT_MADE
  EMAIL_SENT
  WHATSAPP_SENT
  KANBAN_MOVED
}

// =============================================
// TABELAS NORMALIZADAS PARA FILTROS AVANÇADOS
// =============================================

model Cidade {
  id        String   @id @default(cuid())
  nome      String
  uf        String   // Sigla do estado (SP, RJ, MG, etc)
  slug      String   @unique
  ativo     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamentos
  imoveis    Imovel[]
  corretores CorretorProfile[]

  @@unique([nome, uf])
  @@index([nome])
  @@index([uf])
  @@index([slug])
  @@map("cidades")
}

model ImovelStatusConfig {
  id        String   @id @default(cuid())
  nome      String   // "Disponível", "Alugado", "Vendido", "Em negociação", "Reservado"
  slug      String   @unique
  cor       String?  // Cor para exibição (hex)
  ordem     Int      @default(0)
  ativo     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamentos
  imoveis Imovel[]

  @@index([slug])
  @@index([ordem])
  @@map("imovel_status_config")
}

model LeadStatusConfig {
  id        String   @id @default(cuid())
  nome      String   // "Novo", "Em contato", "Agendado", "Fechado", "Perdido"
  slug      String   @unique
  cor       String?  // Cor para exibição (hex)
  ordem     Int      @default(0)
  ativo     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamentos
  leads Lead[]

  @@index([slug])
  @@index([ordem])
  @@map("lead_status_config")
}

// =============================================
// KANBAN SYSTEM
// =============================================

model KanbanBoard {
  id        String   @id @default(cuid())
  name      String
  isGlobal  Boolean  @default(false)
  ownerId   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner   User?          @relation("OwnedBoards", fields: [ownerId], references: [id], onDelete: Cascade)
  columns KanbanColumn[]

  @@index([isGlobal])
  @@index([ownerId])
  @@map("kanban_boards")
}

model KanbanColumn {
  id               String   @id @default(cuid())
  boardId          String
  name             String
  order            Int
  color            String?
  isFinal          Boolean  @default(false)
  automationConfig Json?    // Config for event completion automation: { moveOnEventComplete: true, targetColumnId: "xxx" }
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  board KanbanBoard @relation(fields: [boardId], references: [id], onDelete: Cascade)
  leads Lead[]

  @@index([boardId])
  @@index([order])
  @@map("kanban_columns")
}

model KanbanPermission {
  id             String   @id @default(cuid())
  userId         String   @unique
  canEditBoard   Boolean  @default(false)
  canEditColumns Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("kanban_permissions")
}

// =============================================
// TABELAS PRINCIPAIS
// =============================================

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamentos
  corretorProfile  CorretorProfile?
  admin            Admin?
  ownedBoards      KanbanBoard[]    @relation("OwnedBoards")
  kanbanPermission KanbanPermission?

  @@map("users")
}

model CorretorProfile {
  id           String   @id @default(cuid())
  userId       String   @unique
  slug         String   @unique
  bio          String?  @db.Text
  phone        String?
  photo        String?
  whatsapp     String?
  cidade       String?  // Campo legado - mantido para compatibilidade
  cidadeId     String?  // Nova FK para tabela normalizada
  approved     Boolean  @default(false)
  landingAtiva Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relacionamentos
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  cidadeRef     Cidade?        @relation(fields: [cidadeId], references: [id], onDelete: SetNull)
  imoveis       Imovel[]
  leads         Lead[]
  landingBlocos LandingBloco[]

  @@index([slug])
  @@index([cidadeId])
  @@map("corretor_profiles")
}

model Admin {
  id        String   @id @default(cuid())
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamentos
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("admins")
}

model Imovel {
  id             String        @id @default(cuid())
  corretorId     String
  titulo         String
  descricao      String        @db.Text
  tipo           ImovelTipo
  status         ImovelStatus  @default(ATIVO) // Campo legado mantido
  statusConfigId String?       // Nova FK para tabela normalizada
  valor          Decimal       @db.Decimal(12, 2)
  endereco       String
  cidade         String        // Campo legado mantido
  cidadeId       String?       // Nova FK para tabela normalizada
  estado         String
  cep            String?
  bairro         String?
  quartos        Int?
  banheiros      Int?
  suites         Int?          // Novo campo
  area           Decimal?      @db.Decimal(10, 2)
  areaTerreno    Decimal?      @db.Decimal(10, 2) // Novo campo
  garagem        Int?
  images         String[]      @default([])
  views          Int           @default(0)
  latitude       Decimal?      @db.Decimal(10, 8)
  longitude      Decimal?      @db.Decimal(11, 8)
  destaque       Boolean       @default(false)
  condominio     Decimal?      @db.Decimal(10, 2) // Valor do condomínio
  iptu           Decimal?      @db.Decimal(10, 2) // Valor do IPTU
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  // Relacionamentos
  corretor     CorretorProfile    @relation(fields: [corretorId], references: [id], onDelete: Cascade)
  cidadeRef    Cidade?            @relation(fields: [cidadeId], references: [id], onDelete: SetNull)
  statusConfig ImovelStatusConfig? @relation(fields: [statusConfigId], references: [id], onDelete: SetNull)
  leads        Lead[]
  eventos      EventoCalendario[]

  @@index([corretorId])
  @@index([tipo])
  @@index([status])
  @@index([statusConfigId])
  @@index([cidade])
  @@index([cidadeId])
  @@index([destaque])
  @@index([createdAt])
  @@index([valor])
  @@index([tipo, valor])
  @@index([tipo, cidade])
  @@index([quartos])
  @@map("imoveis")
}

model Lead {
  id              String        @id @default(cuid())
  imovelId        String?
  corretorId      String
  name            String
  email           String?
  phone           String
  message         String?       @db.Text
  description     String?       @db.Text // Rich description for the lead
  origem          String?       @default("site") // 'site' | 'landing' | 'perfil' | 'imovel' | 'whatsapp'
  status          LeadStatus    @default(NOVO) // Campo legado mantido
  statusConfigId  String?       // Nova FK para tabela normalizada
  priority        LeadPriority  @default(MEDIA)
  anotacoes       String?       @db.Text
  dataContato     DateTime?     // Data do último contato
  dataAgendamento DateTime?     // Data de agendamento de visita
  kanbanColumnId  String?       // Kanban column assignment (single source of truth)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relacionamentos
  imovel       Imovel?           @relation(fields: [imovelId], references: [id], onDelete: Cascade)
  corretor     CorretorProfile   @relation(fields: [corretorId], references: [id], onDelete: Cascade)
  statusConfig LeadStatusConfig? @relation(fields: [statusConfigId], references: [id], onDelete: SetNull)
  kanbanColumn KanbanColumn?     @relation(fields: [kanbanColumnId], references: [id], onDelete: SetNull)
  eventos      EventoCalendario[]
  timeline     LeadTimeline[]
  tags         LeadTag[]

  @@index([corretorId])
  @@index([imovelId])
  @@index([status])
  @@index([statusConfigId])
  @@index([priority])
  @@index([createdAt])
  @@index([origem])
  @@index([kanbanColumnId])
  @@map("leads")
}

model LandingBloco {
  id         String   @id @default(cuid())
  corretorId String
  tipo       String   // hero | historia | galeria | carrossel | cta | imoveis | video | contato | texto
  titulo     String?
  subtitulo  String?
  texto      String?  @db.Text
  imagens    String[] @default([])
  videoUrl   String?
  ordem      Int
  ativo      Boolean  @default(true)
  config     Json?    // Configurações adicionais específicas do bloco
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relacionamentos
  corretor CorretorProfile @relation(fields: [corretorId], references: [id], onDelete: Cascade)

  @@index([corretorId])
  @@index([ordem])
  @@map("landing_blocos")
}

model EventoCalendario {
  id         String      @id @default(cuid())
  leadId     String
  imovelId   String
  tipo       EventoTipo  @default(VISITA)
  dataHora   DateTime
  observacao String?     @db.Text
  completed  Boolean     @default(false)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  // Relacionamentos
  lead   Lead   @relation(fields: [leadId], references: [id], onDelete: Cascade)
  imovel Imovel @relation(fields: [imovelId], references: [id], onDelete: Cascade)

  @@index([dataHora])
  @@index([leadId])
  @@index([imovelId])
  @@index([tipo])
  @@index([completed])
  @@index([createdAt])
  @@map("eventos_calendario")
}

model LeadTimeline {
  id          String         @id @default(cuid())
  leadId      String
  action      TimelineAction
  description String         @db.Text
  metadata    Json?
  createdAt   DateTime       @default(now())

  // Relacionamentos
  lead Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@index([leadId])
  @@index([createdAt])
  @@map("lead_timeline")
}

// =============================================
// TAG SYSTEM
// =============================================

model Tag {
  id        String   @id @default(cuid())
  name      String
  color     String   // Hex color code
  userId    String?  // For user-specific tags, null for global tags
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamentos
  leads LeadTag[]

  @@unique([name, userId])
  @@index([userId])
  @@map("tags")
}

model LeadTag {
  id        String   @id @default(cuid())
  leadId    String
  tagId     String
  createdAt DateTime @default(now())

  // Relacionamentos
  lead Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([leadId, tagId])
  @@index([leadId])
  @@index([tagId])
  @@map("lead_tags")
}
